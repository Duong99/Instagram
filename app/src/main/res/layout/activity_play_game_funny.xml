<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeBG"
    tools:context=".main.mainmusic.PlayGameFunnyActivity">

    <ImageButton

        android:layout_margin="5dp"
        android:background="@drawable/ask_and_answer_icon"
        android:layout_centerHorizontal="true"
        android:id="@+id/ibtnAsk"
        android:layout_width="40dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/imvHeart"
        android:layout_margin="10dp"
        android:background="@drawable/heart_red_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:textStyle="bold"
        android:textColor="#FF0000"
        android:id="@+id/txtPoint"
        android:textSize="20sp"
        android:text="0"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imvHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/skbTimeSong"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/imvHeart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/star_icon"
        android:id="@+id/imvStarHope"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <TextView
        android:textColor="#111"
        android:textStyle="bold"
        android:id="@+id/txtRequest"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:layout_below="@id/skbTimeSong"
        android:text="Đây là bài hát của ca sĩ nào thể hiện?"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/color_answer_none"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_toLeftOf="@id/txtCenter"
        android:id="@+id/btnAnswer1"
        android:layout_below="@id/txtRequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_centerHorizontal="true"
        android:id="@+id/txtCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/color_answer_none"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@id/txtRequest"
        android:layout_toRightOf="@id/txtCenter"
        android:id="@+id/btnAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/color_answer_none"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@id/btnAnswer1"
        android:layout_toLeftOf="@id/txtCenter"
        android:id="@+id/btnAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:background="@color/color_answer_none"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@id/btnAnswer2"
        android:layout_toRightOf="@id/txtCenter"
        android:id="@+id/btnAnswer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/ibtn5050"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/btnAnswer3"
        android:layout_margin = "10dp"
        android:background="@drawable/images5050" />

    <ImageButton
        android:background="@drawable/images_icon_xem_ca_si"
        android:layout_margin="10dp"
        android:layout_below="@id/btnAnswer3"
        android:layout_alignParentRight="true"
        android:id="@+id/ibtnWatchImageSinger"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnCheck"
        android:gravity="center"
        android:text="Start"
        android:layout_margin="10dp"
        android:layout_below="@id/btnAnswer3"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView

        android:layout_alignParentBottom="true"
        android:id="@+id/imvSinger"
        android:layout_margin="10dp"
        android:layout_below="@id/btnCheck"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>