<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SettinglFragment">

    <TextView
        android:padding="2dp"
        android:textSize="18sp"
        android:textColor="#111"
        android:id="@+id/txtTitleSetting"
        android:gravity="center"
        android:text="Setting:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@id/txtTitleSetting"
        android:id="@+id/txtListAnaUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:text="List analyzed users:"
        android:textColor="#111"
        android:textSize="14sp" />


    <androidx.recyclerview.widget.RecyclerView

        android:layout_marginBottom="5dp"
        android:id="@+id/recyclerAnalyzed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/txtDeleteAllData"
        android:layout_below="@id/txtListAnaUser"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#FFFFFF"
        android:padding="5dp" />

    <TextView
        android:layout_marginBottom="5dp"
        android:id="@+id/txtDeleteAllData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtLogoOut"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:text="Delete All Cached Data"
        android:textColor="#111"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtLogoOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text="Log Out"
        android:textColor="#111"
        android:textSize="14sp" />

</RelativeLayout>