<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp">

    <ImageView
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:id="@+id/imvPostPersonalHome"
        android:layout_width="match_parent"
        android:layout_height="350dp" />

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/imvHeartRed"
            android:background="@drawable/heart_red"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:id="@+id/txtTotalLikePostPersonal"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/imvHeartRed"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/txtTotalComments"
            android:text="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/txtTotalComments"
            android:background="@drawable/comment_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
</RelativeLayout>