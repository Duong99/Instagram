<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FilterFriendFragment">

    <SearchView
        android:iconifiedByDefault="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/edtSearchFriend"
        android:queryHint="Enter userName or full name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="#111"
        android:text="Friend"
        android:textSize="16sp"
        android:layout_below="@id/edtSearchFriend"
        android:id="@+id/txtTotalFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_marginTop="5dp"
        android:id="@+id/spinnerContentWatch"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/edtSearchFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:background="#FFFFFF"
        android:layout_below="@id/spinnerContentWatch"
        android:id="@+id/recyclerPeopleFilter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>