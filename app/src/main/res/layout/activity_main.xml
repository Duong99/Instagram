<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <TextView
        android:id="@+id/txt1"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FF456A"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="Welcome To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/txt1"
        android:id="@+id/txt2"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FF4343"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="ANALYZE INSTAGRAM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@drawable/instagram_analyze"
        android:layout_margin="10dp"
        android:layout_above="@id/txt3"
        android:layout_below="@id/txt2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_above="@id/imgBtnLogin"
        android:id="@+id/txt3"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="16sp"
        android:text="Version: 1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_marginBottom="15dp"
        android:id="@+id/imgBtnLogin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:visibility="invisible"
        android:id="@+id/progress_circular"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>