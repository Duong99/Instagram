<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.mainmusic.PlaySongsThemeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/imvThemePlay"
                android:layout_width="match_parent"
                android:layout_height="120dp"/>

            <TextView
                android:layout_marginTop="2sp"
                android:textSize="18sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_below="@id/imvThemePlay"
                android:id="@+id/txtTitleThemePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="14sp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/txtTitleThemePlay"
                android:id="@+id/txtContentTitleThemePlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerThemePlay"
                android:layout_below="@id/txtContentTitleThemePlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:padding="5dp"
                android:id="@+id/txtViewMoreThemePlay"
                android:text="View more"
                android:gravity="center"
                android:layout_below="@id/recyclerThemePlay"
                android:textColor="#9A62FF"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>