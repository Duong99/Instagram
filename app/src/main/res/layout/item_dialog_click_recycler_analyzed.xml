<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/re"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/imvPeopeoAnalyzed"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:layout_marginTop="2dp"
            android:id="@+id/txtUserNameAnalyzedDialog"
            android:textColor="#111"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imvPeopeoAnalyzed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_below="@+id/txtUserNameAnalyzedDialog"
            android:layout_marginTop="2dp"
            android:id="@+id/txtFullNameAnalyzedDialog"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imvPeopeoAnalyzed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:textColor="#000"
        android:id="@+id/txtOpenAnalyzeDialog"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="Open Analyze"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:id="@+id/txtViewProfileAnalyzed"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="VIEW PROFILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:id="@+id/txtDeleteAnalyze"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:id="@+id/txtCancelAnalyze"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="Cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>