<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:id="@+id/re"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/imvPeopeoFilterDialog"
            android:layout_width="45dp"
            android:layout_height="45dp" />

        <TextView
            android:layout_marginTop="2dp"
            android:text="aaa"
            android:id="@+id/txtUserNameFilterDialog"
            android:textColor="#111"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imvPeopeoFilterDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:text="aaa"
            android:layout_marginTop="2dp"
            android:layout_below="@id/txtUserNameFilterDialog"
            android:id="@+id/txtFullNameFilterDialog"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/imvPeopeoFilterDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:textColor="#000"
        android:id="@+id/txtAnalyzeDialog"
        android:layout_below="@id/re"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="ANALYZE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:id="@+id/txtViewProfileDialog"
        android:layout_below="@id/txtAnalyzeDialog"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="VIEW PROFILE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="#000"
        android:id="@+id/txtViewPictureFire"
        android:layout_below="@id/txtViewProfileDialog"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="VIEW PICTURE FIRE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView

        android:textColor="#000"
        android:id="@+id/txtCancelSelectPerson"
        android:layout_below="@id/txtViewPictureFire"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="CANCEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>