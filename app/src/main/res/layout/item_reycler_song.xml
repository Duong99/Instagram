<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/imvSong"
        android:background="@drawable/topic_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <TextView

        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#111"
        android:textSize="15sp"
        android:text="Chay ngay di"
        android:layout_toRightOf="@id/imvSong"
        android:id="@+id/txtTitleSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:textSize="13sp"
        android:layout_below="@id/txtTitleSong"
        android:text="Son tung"
        android:layout_toRightOf="@id/imvSong"
        android:id="@+id/txtSingerSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imvDownloadMusic"
        android:background="@drawable/download_music_icon"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imvHeart"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <ImageView
        android:id="@+id/imvHeart"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/heart_red_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>