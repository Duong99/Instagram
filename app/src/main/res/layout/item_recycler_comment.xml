<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvComment"
        android:layout_width="35dp"
        android:layout_height="35dp" />

    <TextView
        android:layout_marginLeft="3dp"
        android:text="nghiemduong"
        android:id="@+id/txtUsernameComment"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/imvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:text="hello"
        android:id="@+id/txtTextComment"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/txtUsernameComment"
        android:layout_toLeftOf="@id/imvLikeComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_centerVertical="true"
        android:background="@drawable/heart_red"
        android:id="@+id/imvLikeComment"
        android:layout_alignParentRight="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:layout_marginRight="4dp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:text="19"
        android:id="@+id/txtTotalLikeComment"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="20dp"/>

</RelativeLayout>